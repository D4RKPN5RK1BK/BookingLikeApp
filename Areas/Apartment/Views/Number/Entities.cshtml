@model Number
@{ 
	ViewData["Title"] = "Объекты";
}

<div class="card mt-3">
	<div class="card-body">
		<h2 class="card-title col-sm-12">Колисчество номеров данного типа</h2>
		<form asp-action="Count" asp-controller="NumberEntities" method="post"></form>
		<div class="form-group col-sm-12">
			<input type="hidden" name="id" value="@Model.Id" />
			<div class="row col-sm-12">
				<input type="number" id="count" name="count" value="@Model.Count" class="form-control col-sm-4" />
				<input type="submit" name="name" value="Применить" class="btn btn-success ml-sm-3" />
			</div>
		</div>
		<div class="col-sm-12">
			<table class="table-sm table-hover">
				<thead>
				<th>Номер</th>
				<th>Доступен</th>
				<th>Удаление</th>
				</thead>
				@foreach (var e in Model.NumberEntities)
				{
					<tr>
						<td><input type="text" name="name" value="@e.Name" class="form-control-sm"/> </td>
						<td class="text-center"><input type="checkbox" name="enable" value="" checked="@if (e.Enable) { Html.Raw("checked"); } " /></td>
						<td><button type="button" class="btn btn-link btn-sm">Удалить</button></td>
					</tr>

				}
			</table>
		</div>
		
	</div>
</div>
