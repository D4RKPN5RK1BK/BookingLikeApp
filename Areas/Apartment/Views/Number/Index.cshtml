@model Apartment
@{
	Layout = "_EditApartmentLayout";
	ViewData["Title"] = "Номера";
	ViewData["Id"] = Model.Id;
}

<form asp-controller="Number" asp-action="Create" asp-route-id="@Model.Id">
	<div class="card">
		<div class="card-body">
			<h2 class="card-title">Добавить новый номер</h2>
			<div class="form-group">
				<select name="numberTypeId" asp-items="@ViewBag.NumberTypeItems" class="custom-select col-sm-4"></select>
				<input type="submit" value="Добавить" class="btn btn-success" />
			</div>
		</div>
	</div>
</form>

<div class="list-group mt-3">
	@foreach (Number item in Model.Numbers)
	{
		<a asp-controller="Number" asp-action="Edit" asp-route-id="@item.Id" class="list-group-item list-group-item-action d-sm-inline-flex">
			<div class="flex-grow-1">
				<h4>
					<span class="badge badge-secondary">@item.NumberType.Code</span>
					@item.Name
					@if (!item.Finish)
					{
						<span class="badge badge-warning">
							<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-clipboard-x" viewBox="0 0 16 16">
								<path fill-rule="evenodd" d="M6.146 7.146a.5.5 0 0 1 .708 0L8 8.293l1.146-1.147a.5.5 0 1 1 .708.708L8.707 9l1.147 1.146a.5.5 0 0 1-.708.708L8 9.707l-1.146 1.147a.5.5 0 0 1-.708-.708L7.293 9 6.146 7.854a.5.5 0 0 1 0-.708z" />
								<path d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1h1a1 1 0 0 1 1 1V14a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V3.5a1 1 0 0 1 1-1h1v-1z" />
								<path d="M9.5 1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5h3zm-3-1A1.5 1.5 0 0 0 5 1.5v1A1.5 1.5 0 0 0 6.5 4h3A1.5 1.5 0 0 0 11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3z" />
							</svg>
						</span>
					}
					@if (!item.Enable)
					{
						<span class="badge badge-warning">
							<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-share" viewBox="0 0 16 16">
								<path d="M13.5 1a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3zM11 2.5a2.5 2.5 0 1 1 .603 1.628l-6.718 3.12a2.499 2.499 0 0 1 0 1.504l6.718 3.12a2.5 2.5 0 1 1-.488.876l-6.718-3.12a2.5 2.5 0 1 1 0-3.256l6.718-3.12A2.5 2.5 0 0 1 11 2.5zm-8.5 4a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3zm11 5.5a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3z" />
							</svg>
						</span>
					}
				</h4>
			</div>
		</a>
	}
</div>
