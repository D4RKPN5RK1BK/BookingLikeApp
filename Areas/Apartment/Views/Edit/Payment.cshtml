@model PaymentViewModel 
@{
	ViewData["Title"] = "Оплата";
	ViewData["Id"] = Model.Id;
}

<h2 class="my-3 display-4">Оплата</h2>

<form asp-controller="Edit" asp-action="Payment">
    <div class="card mt-3">
        <div class="card-body">
			<div class="col-sm-8">
				<h2 class="card-title">Способ оплаты гостей</h2>
				<p>Выберите карты которыми смогут пользоваться ваши гости.</p>
				<div class="row">
                    @for (int i = 0; i< Model.Cards.Count; i++)
					{
						<div class="col-12 col-sm-6">
							<div class="form-group">
								<input type="hidden" asp-for="Cards[i].Id"/>
								<input asp-for="Cards[i].Use" />
								<label>@Model.Cards[i].Name</label>
							</div>
						</div>

					}
				</div>

			</div>
        </div>    
    </div>

    <div class="card mt-3">
        <div class="card-body">
			<div class="col-sm-6">
                <h2 class="card-title">Коммиссия</h2>
                <p class="card-text">Кто оплачивает счета</p>
                <select asp-for="PolisherInApartment" class="custom-select" asp-items="@Model.Polishers"></select>
            </div>
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-body">
            <h2 class="card-title">Почти готово</h2>
            <h5 class="card-text">
                Вы уже почти закончили.
            </h5>
            <div class="form-group">
                <input asp-for="Enable" class="form-check-inline" />
                <label class="col-form-label">Сразу добавить возможность снимать недвижемость.</label>
            </div>
        </div>
    </div>

    <div class="d-flex flex-column align-items-center mb-5">
        <input type="submit" value="Завершить регистрацию" class="btn-block btn-success btn-lg mt-3 mb-1" />
        <small>Переходя по какой люибо другой ссылке вы потеряете все изменения введенные на этой странице!</small>
    </div>
</form>
