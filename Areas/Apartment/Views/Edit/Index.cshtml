@model Apartment
@{ 
	ViewData["Title"] = "Редактирование объекта";
	Layout = "_Layout";
}

<h2 class="display-2 text-center">@(Model.Name == null ? "Редактирование объекта" : Model.Name)</h2>

<div class="row">
	<div class="col-sm-4">
		<div class="card">
			<div class="card-body">
				<h2 class="card-title">PLACEHOLDER</h2>
			</div>
		</div>
		<a asp-controller="Edit" asp-action="BasicInfo" asp-route-id="@Model.Id" class="btn btn-primary btn-block">Базовая информация</a>
	</div>
	<div class="col-sm-4">
		<div class="card">
			<div class="card-body">
				<h2 class="card-title">PLACEHOLDER</h2>
			</div>
		</div>
		<a asp-controller="Number" asp-action="Index" asp-route-id="@Model.Id" class="btn btn-primary btn-block">Номера</a>
	</div>
	<div class="col-sm-4">
		<div class="card">
			<div class="card-body">
				<h2 class="card-title">PLACEHOLDER</h2>
			</div>
		</div>
		<a asp-controller="Edit" asp-action="Services" asp-route-id="@Model.Id" class="btn btn-primary btn-block">Сервисы</a>
	</div>
</div>
