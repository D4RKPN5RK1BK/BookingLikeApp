@model Registration
@{
	Layout = "_Layout";
}
<h2 class="display-4">@Model.ApartmentName</h2>
<a asp-action="Index" asp-controller="Read">К списку отелей</a>

<div class="row">
	<div class="col-sm-3 mt-3">
		<div class="list-group">
			<div class="row">
				<div class="col-sm-4">

				</div>
			</div>
			<a asp-controller="Edit" asp-action="BasicInfo" asp-route-id="@ViewData["Id"]" class="list-group-item list-group-item-action @(Model.BasicInfo ?  "list-group-item-success" : "") @(ViewData["Title"].ToString() == "Общая информация" ? "active" : "")">Общая информация</a>
			<a asp-controller="Number" asp-action="Index" asp-route-id="@ViewData["Id"]" class="list-group-item list-group-item-action @(Model.Numbers ?  "list-group-item-success" : "")  @(ViewData["Title"].ToString() == "Номера" ? "active" : "")">Номера</a>
			<a asp-controller="Edit" asp-action="Services" asp-route-id="@ViewData["Id"]" class="list-group-item list-group-item-action @(Model.Services ?  "list-group-item-success" : "")  @(ViewData["Title"].ToString() == "Услуги" ? "active" : "")">Услуги</a>
			<a asp-controller="Edit" asp-action="Photos" asp-route-id="@ViewData["Id"]" class="list-group-item list-group-item-action @(Model.Photos ?  "list-group-item-success" : "")  @(ViewData["Title"].ToString() == "Фотографии" ? "active" : "")">Фотографии</a>
			@if (Model.FacilitesRequired)
			{
				<a asp-controller="Edit" asp-action="Facilites" asp-route-id="@ViewData["Id"]" class="list-group-item list-group-item-action @(Model.Facilites ?  "list-group-item-success" : "")  @(ViewData["Title"].ToString() == "Удобства" ? "active" : "")">Удобства</a>
			}
			<a asp-controller="Edit" asp-action="Rules" asp-route-id="@ViewData["Id"]" class="list-group-item list-group-item-action @(Model.Rules ?  "list-group-item-success" : "")  @(ViewData["Title"].ToString() == "Правила проживания" ? "active" : "")">Правила</a>
			<a asp-controller="Edit" asp-action="Payment" asp-route-id="@ViewData["Id"]" class="list-group-item list-group-item-action @(Model.Payment ?  "list-group-item-success" : "")  @(ViewData["Title"].ToString() == "Оплата" ? "active" : "")">Оплата</a>
		</div>
		<div class="list-group mt-3">
			<a asp-controller="Delete" asp-action="Index" asp-route-id="@ViewData["Id"]" class="list-group-item list-group-item-danger list-group-item-action @(Model.Payment ?  "list-group-item-success" : "")  @(ViewData["Title"].ToString() == "Удаление" ? "active" : "")">Удалить</a>

		</div>
	</div>
	<div class="col-sm-9">
		@RenderBody()
	</div>
</div>

@section Scripts {
	@await RenderSectionAsync("Scripts", required: false)
}
