@{ 
    Layout = "_Layout";
    ViewData["Title"] = "Выбор типа";
}

<h2 class="display-4">Регистрация объекта</h2>
@if((bool)ViewData["Exist"])
{
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Вы уже начали регистрацию объекта.</h2>
            <p>Его редактирование можно продолжить перейдя по ссылке.</p>
            <a asp-action="BasicInfo" class="btn btn-success">Продолжить редактировать</a>
        </div>
    </div>
}

<div class="row my-5">
    @foreach (var item in ViewBag.ApartmentTypes)
    {
	<div class="text-center col-sm-3">
		<form asp-action="Initialize" asp-controller="Create">
			<img src="@item.PhotoUrl" alt="Image not found" class="text-center" />
			<div class="text-center">
				<input type="hidden" name="apartmentType" value="@item.Id" />
				<input type="submit" value="@item.Name" class="btn btn-primary btn-block" />
			</div>
		</form>
	</div>
    }
</div>
