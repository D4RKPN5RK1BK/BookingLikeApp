@model NumbersViewModel
@{
    ViewData["Title"] = "Номера";
}

<h2 class="my-3 display-4">Номера</h2>

<form asp-controller="Create" asp-action="AddNumber">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Добивать новый номер</h2>
            <div class="form-group">
                <select name="numberTypeId" asp-items="@Model.NumberTypes" class="custom-select col-sm-4">
                    <option>Выберите тип номера</option>
                </select>
                <input type="submit" value="Добавить" class="btn btn-success"/>
            </div>
        </div>
    </div>
</form>

<div class="list-group mt-3">
    @foreach(Number item in Model.NumbersList)
    {
        <div class="list-group-item d-sm-inline-flex">
            <div class="flex-grow-1">
                <h4>@item.CustomName</h4>
            </div>
            <a asp-controller="Edit" class="btn btn-primary mr-sm-3">Изменить</a>
            <a asp-controller="Delete" class="btn btn-danger mr-sm-3">Удалить</a>
        </div>
    }

</div>
<a asp-action="Services" asp-controller="Create" class="btn-block btn-success btn-lg mt-3 mb-1 text-center">Продолжить</a>