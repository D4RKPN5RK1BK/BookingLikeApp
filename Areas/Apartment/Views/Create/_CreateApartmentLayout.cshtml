@{
    Layout = "_Layout";
}
<div class="list-group-horizontal-sm list-group text-center">
    <a asp-controller="Create" asp-action="BasicInfo" class="list-group-item list-group-item-action @(ViewData["Title"].ToString() == "Общая информация" ? "active" : "")">Общая информация</a>
    <a asp-controller="Create" asp-action="Numbers" class="list-group-item list-group-item-action @(ViewData["Title"].ToString() == "Номера" ? "active" : "")">Номера</a>
    <a asp-controller="Create" asp-action="Services" class="list-group-item list-group-item-action @(ViewData["Title"].ToString() == "Услуги" ? "active" : "")">Услуги</a>
    <a asp-controller="Create" asp-action="Photos" class="list-group-item list-group-item-action @(ViewData["Title"].ToString() == "Фотографии" ? "active" : "")">Фотографии</a>
    <a asp-controller="Create" asp-action="Facilites" class="list-group-item list-group-item-action @(ViewData["Title"].ToString() == "Удобства" ? "active" : "")">Удобства</a>
    <a asp-controller="Create" asp-action="Rules" class="list-group-item list-group-item-action @(ViewData["Title"].ToString() == "Правила проживания" ? "active" : "")">Правила</a>
    <a asp-controller="Create" asp-action="Payment" class="list-group-item list-group-item-action @(ViewData["Title"].ToString() == "Оплата" ? "active" : "")">Оплата</a>
</div>

@RenderBody()