@model PaymentViewModel 
@{
    ViewData["Title"] = "Оплата";
}

<h2 class="my-3 display-4">Оплата</h2>


<form asp-controller="Create" asp-action="Payment">
    <div class="card mt-3">
        <div class="card-body">
            <h2 class="card-title">Способ оплаты гостей</h2>
            <div class="form-group">
                <input asp-for="UseCards" class="form-check-inline" data-toggle="collapse" data-target="#cards" aria-expanded="false" aria-controls="cards"/>
                <label asp-for="UseCards" class="col-form-label"></label>
            </div>
            <div class="collapse" id="cards">
                <h4>Выберите карты которыми смогут пользоваться ваши гости.</h4>
                <div class="row">
                    @foreach(var item in Model.Cards)
                    { 
                        <div class="col-12 col-sm-6">
                            <div class="form-group">
                                <input asp-for="@item.Use" />
                                <label>@item.Name</label>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>    
    </div>

    <div class="card mt-3">
        <div class="card-body">
            <h2 class="card-title">Коммиссия</h2>
            <p class="card-text">Кто будет получать деньги</p>
            <select asp-for="PolisherInApaertment" class="custom-select"></select>
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-body">
            <h2 class="card-title">Почти готово</h2>
            <h5 class="card-text">
                Вы уже почти закончили.
            </h5>
            <div class="form-group">
                <input asp-for="Enable" class="form-check-inline" />
                <label class="col-form-label">Сразу добавить возможность снимать недвижемость.</label>
            </div>
        </div>
    </div>

    <div class="d-flex flex-column align-items-center mb-5">
        <input type="submit" value="Завершить регистрацию" class="btn-block btn-success btn-lg mt-3 mb-1" />
        <small>Переходя по какой люибо другой ссылке вы потеряете все изменения введенные на этой странице!</small>
    </div>
</form>