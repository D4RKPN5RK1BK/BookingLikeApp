@model Apartment
@{
    ViewData["Title"] = "Rules";
}

<h2 class="my-3 display-4">Rules</h2>

<form asp-controller="" asp-action="">
    <div class="card">
        <div class="card-body">
            <div class="col-sm-5">
                <h2 class="card-title">Reservation cencel</h2>
                <label asp-for="DaysUntilCancelEnds" class="col-form-label-sm"></label>
                <select asp-for="DaysUntilCancelEnds" class="custom-select">
                    <option value="0">Arrival day</option>
                    <option value="1">1 day before</option>
                    <option value="2">2 day before</option>
                    <option value="3">3 day before</option>
                    <option value="7">7 day before</option>
                    <option value="14">14 day before</option>
                </select>
            </div>
            <div class=" form-group col-md-5 mt-3">
                <label class="col-form-label-sm">or guests will pay</label>
                <select asp-for="FullPriceCencel" class="custom-select">
                    <option value="true">Full reservation price</option>
                    <option value="false">One night price</option>
                </select>
            </div>
        </div>
    </div>

    <div class="card-group mt-3">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title">One</h2>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <h2 class="card-title">Two</h2>
            </div>
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-body">
            <h2 class="card-title">Защита от случ бронирований</h2>
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-body">
            <h2 class="card-title col-sm-10">Animals and childrens</h2>
            <div class="form-group col-sm-6">
                <input asp-for="AnimalsAllowed" class="form-check-inline" />
                <label asp-for="AnimalsAllowed" class="col-form-label"></label>
                <span asp-validation-for="AnimalsAllowed" class="alert-danger"></span>
            </div>
            <div class="form-group col-sm-6">
                <input asp-for="ChildrensAllowed" class="form-check-inline" />
                <label asp-for="ChildrensAllowed" class="col-form-label"></label>
                <span asp-validation-for="ChildrensAllowed" class="alert-danger"></span>
            </div>
        </div>
    </div>
</form>