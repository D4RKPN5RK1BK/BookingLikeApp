@model City
@{
	ViewData["Title"] = "Города";
}
<div class="col-sm-12">
	<h2 class="display-4">Редактирование элемента</h2>
	<a asp-action="Index" class="btn-link">Вернуться к спику</a>
</div>

<form asp-action="Create" method="post" enctype="multipart/form-data">
	<div class="col-sm-4 mt-3">
		<div class="form-group">
			<label asp-for="Name" class="col-form-label"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="alert-danger"></span>
		</div>
		<div class="form-group">
			<label>Страна</label>
			<select asp-for="CountryId" asp-items="@ViewBag.Countries" class="custom-select">
				<option selected disabled>Выберите страну</option>
			</select>
			@*@{ await Html.RenderPartialAsync("_CountrySelect", ViewData["Countries"]);}*@
		</div>
		<div class="form-group">
			<label asp-for="PhotoUrl" class="col-form-label"></label>
			<input asp-for="File" class="form-control-file" />
		</div>
		<div class="form-group">
			<input asp-for="Blocked" class="form-check-inline" />
			<label asp-for="Blocked" class="col-form-label"></label>
		</div>
		<div class="form-group">
			<input type="submit" value="Добавить" class="btn btn-success" />
		</div>
	</div>
</form>
