@model Street
@{
	ViewData["Title"] = "Улицы";
}
<div class="col-sm-12">
	<h2 class="display-4">Редактирование элемента</h2>
	<a asp-action="Index" class="btn-link">Вернуться к спику</a>
</div>

<form asp-action="Create" method="post">
	<div class="col-sm-4 mt-3">
		<div class="form-group">
			<label asp-for="Name" class="col-form-label"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="alert-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="CityName" class="col-form-label"></label>
			<input asp-for="CityName" class="form-control" list="cities"/>
			<datalist id="cities">
				@foreach(var item in ViewBag.CityList)
				{
					<option>@item.Name</option>
				}
			</datalist>
			<span asp-validation-for="CityName" class="alert-danger"></span>
		</div>

		<div class="form-group">
			<input type="submit" value="Добавить" class="btn btn-success" />
		</div>
	</div>
</form>
