@model Bed
@{
	ViewData["Title"] = "Типы кроватей";
}

<div class="col-sm-12">
	<h2 class="display-4">Редактирование элемента</h2>
	<a asp-action="Index" class="btn-link">Вернуться к спику</a>
</div>

<div class="col-sm-4 mt-3">
	<div class="form-group">
		<p class="col-form-label">@Html.DisplayNameFor(o => o.Name)</p>
		<h4>@Html.DisplayFor(o => o.Name)</h4>
	</div>
	<div class="form-group">
		<p class="col-form-label">@Html.DisplayNameFor(o => o.Code)</p>
		<h4>@Html.DisplayFor(o => o.Code)</h4>
	</div>
	<div class="form-group">
		<p class="col-form-label">@Html.DisplayNameFor(o => o.Capacity)</p>
		<h4>@Html.DisplayFor(o => o.Capacity)</h4>
	</div>
	<form asp-action="Delete" method="post">
		<div class="form-group">
			<input type="hidden" asp-for="Id"/>
			<input type="submit" value="Добавить" class="btn btn-success" />
		</div>
	</form>
</div>
