@model NumberType
@{
	ViewData["Title"] = "Типы номеров";
}

<div class="col-sm-12">
	<h2 class="display-4">Редактирование элемента</h2>
	<a asp-action="Index" class="btn-link">Вернуться к спику</a>
</div>

<form asp-action="Edit" method="post">
	<div class="col-sm-4 mt-3">
		<div class="form-group">
			<label asp-for="Name" class="col-form-label"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="alert-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Description" class="col-form-label"></label>
			<input asp-for="Description" class="form-control" />
			<span asp-validation-for="Description" class="alert-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Code" class="col-form-label"></label>
			<input asp-for="Code" class="form-control" />
			<span asp-validation-for="Code" class="alert-danger"></span>
		</div>
		<div class="form-group">
			<input asp-for="Share" class="form-check-inline" />
			<label asp-for="Share" class="col-form-label"></label>
		</div>
		<div class="form-group">
			<input type="submit" value="Обновить" class="btn btn-success" />
		</div>
	</div>
</form>
