@model BookingLikeApp.Models.User
@{
    ViewData["Title"] = "Кошелек";
}
<div class="list-group list-group-flush">
	<div class="list-group-item">
		<h2 class="card-title">Кошелек</h2>
		<div class="row">
			<div class="col-sm-6">
				<div class="input-group">
					<div class="input-group-prepend ">
						<span class="input-group-text">Текущий баланс</span>
					</div>
					<input type="text" readonly class="form-control " value="@Model.Wallet" />
					<div class="input-group-append">
						<span class="input-group-text">₽</span>
					</div>
				</div>
				<span asp-validation-for="Wallet" class="alert-danger"></span>
			</div>
		</div>

		<form asp-action="FillWallet" method="post">
			<div class="row mt-4">
				<div class="col-sm-6">
					<div class="input-group">
						<div class="input-group-prepend ">
							<span class="input-group-text">Внести сумму</span>
						</div>
						<input type="number" name="value" class="form-control " />
						<div class="input-group-append">
							<span class="input-group-text">₽</span>
						</div>
					</div>
					
				</div>
				<div class="col-sm-4 mt-3 mt-sm-0">
					<input type="submit" value="Внести" class="btn btn-warning btn-block " />
				</div>
			</div>
		</form>

		<form asp-action="DrawWallet" method="post">
			<div class="row mt-4">
				<div class="col-sm-6">
					<div class="input-group">
						<div class="input-group-prepend">
							<span class="input-group-text">Вывести сумму</span>
						</div>
						<input type="number" name="value" class="form-control " />
						<div class="input-group-append">
							<span class="input-group-text">₽</span>
						</div>
					</div>
				</div>
				<div class="col-sm-4 mt-3 mt-sm-0">
					<input type="submit" value="Вывести" class="btn btn-success btn-block" />
				</div>
			</div>
		</form>
	</div>
</div>

