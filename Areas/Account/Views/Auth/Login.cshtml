@model LoginViewModel
@{ 
    Layout = "_Layout";
    ViewData["Title"] = "Login";
}

    <div class="col-sm-4">
        <h2 class="display-4">Login</h2>

        <form asp-controller="Auth" asp-action="Login">
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="@Model.Email" class="col-form-label"></label>
                <input asp-for="@Model.Email" class="form-control" />
                <span asp-validation-for="@Model.Email" class="alert-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Password" class="col-form-label"></label>
                <input asp-for="@Model.Password" class="form-control" />
                <span asp-validation-for="@Model.Password" class="alert-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="@Model.RememberMe" class="" />
                <label asp-for="@Model.RememberMe" class="col-form-label"></label>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-success btn-lg"/>
            </div>
        </form>
    </div>
