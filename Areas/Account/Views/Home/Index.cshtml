@model BookingLikeApp.Models.User

@{ 
    ViewData["Title"] = "Info";
}
<h2 class="display-4">Account information</h2>

<div class="list-group">
    <div class="list-group-item">
        <div class="row">
            <div class="col-sm-3">
                <b>@Html.DisplayNameFor(o => o.AvatarUrl)</b>

            </div>
            <div class="flex-grow-1">
                <img src="@Model.AvatarUrl" alt="[Not selected]" />
            </div>
            <p class="mr-sm-2">
                <a data-toggle="collapse" href="#Avatar" role="button" aria-expanded="false" aria-controls="Avatar" class="btn btn-secondary">Изменить</a>
            </p>
        </div>
        <div class="collapse" id="Avatar">
            <form asp-action="" asp-controller="">
                <div class="row">
                    <input type="file" class="flex-grow-1" />
                    <input type="submit" value="Подтвердить" class="btn btn-success mr-sm-2"/>
                </div>
            </form>
        </div>
    </div>

    <div class="list-group-item">
        <div class="row">
            <b>@Html.DisplayNameFor(o => o.UserName)</b>
            <p>@Model.UserName</p>
        </div>
    </div>
    <div class="list-group-item">
        <div class="row">
            <b>@Html.DisplayNameFor(o => o.DisplayName)</b>
            @(!String.IsNullOrEmpty(Model.DisplayName) ? Model.DisplayName : "[Not selected]")
            
                <a asp-action="" asp-controller="" class="btn btn-light">Edit</a>
            
        </div>
    </div>
    <div class="list-group-item">
        <div class="row">
            <b>@Html.DisplayNameFor(o => o.Email)</b>
            @Model.Email</td>
                <a asp-action="" asp-controller="" class="btn btn-light">Edit</a>
        </div>
    </div>
    <div class="list-group-item">
        <div class="row">
            <b>@Html.DisplayNameFor(o => o.Gender)</b>
            @(Model.Gender == false ? "Man" : "Woman")
            
                <a asp-action="" asp-controller="" class="btn btn-light">Edit</a>
            
        </div>
    </div>
    <div class="list-group-item">
        <div class="row">
            <b>@Html.DisplayNameFor(o => o.DateOfBirth)</b>
            @(Model.DateOfBirth == null ? Model.DateOfBirth : "[Not selected]")
            
                <a asp-action="" asp-controller="" class="btn btn-light">Edit</a>
            
        </div>
    </div>
    <div class="list-group-item">
        <div class="row">
            <b>@Html.DisplayNameFor(o => o.RegistationDate)</b>
            @Model.RegistationDate
            
        </div>
    </div>
</div>