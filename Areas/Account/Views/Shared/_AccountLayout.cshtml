@{ 
    Layout = "_Layout";
}
<div class="row justify-content-center">
    <div class="col-sm-3">
        <div class="list-group ">
            <a asp-area="Account" asp-action="Index" asp-controller="Home" class="list-group-item list-group-item-action @(ViewData["Title"].ToString() == "Info" ? "active" : "")">Info</a>
            <a asp-area="Account" asp-action="Index" asp-controller="Security" class="list-group-item list-group-item-action @(ViewData["Title"].ToString() == "Security" ? "active" : "")">Security</a>
            <a asp-area="Account" asp-action="Index" asp-controller="Reservations" class="list-group-item list-group-item-action @(ViewData["Title"].ToString() == "Email notifications" ? "active" : "")">Email notifications</a>
            <a asp-area="Account" asp-action="Index" asp-controller="Apartments" class="list-group-item list-group-item-action @(ViewData["Title"].ToString() == "Preferences" ? "active" : "")">Preferences</a>
            <a asp-area="Account" asp-action="Index" asp-controller="Wallets" class="list-group-item list-group-item-action @(ViewData["Title"].ToString() == "Wallet" ? "active" : "")">Wallet</a>
        </div>
    </div>
    <div class="col-sm-9">
        @RenderBody()
    </div>
</div>