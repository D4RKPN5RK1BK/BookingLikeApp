<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookingLikeApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BookingLikeApp</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav">

                    </ul>
                    <form asp-action="" asp-controller="" asp-area="" class="flex-grow-1 d-sm-block">
                        <input type="search" class="form-control" placeholder="Search"/>
                    </form>
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Apartment" asp-controller="Create" asp-action="BasicInfo">Add apartment</a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="btn btn-secondary dropdown-toggle" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">@User.Identity.Name</a>
                                <div class=""></div>
                                <div class="dropdown-menu dropdown-menu-right">
                                    @if(User.IsInRole("admin"))
                                    {
                                        <a class="dropdown-item" asp-area="admin" asp-controller="Home" asp-action="Index">Admin page</a>
                                    }
                                    <a class="dropdown-item" asp-area="account" asp-controller="Home" asp-action="Index">Account managment</a>
                                    <a href="#" class="dropdown-item">Saved properties</a>
                                    <a href="#" class="dropdown-item">Reservations</a>
                                    <a href="#" class="dropdown-item">Wallet</a>
                                    <a class="dropdown-item font-weight-bold" asp-area="account" asp-controller="auth" asp-action="Logout">Logout</a>
                                </div>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link nav-link" asp-area="account" asp-controller="auth" asp-action="login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link nav-link" asp-area="account" asp-controller="auth" asp-action="register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - BookingLikeApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-ajax-unobtrusive/dist/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
