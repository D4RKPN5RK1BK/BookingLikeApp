				<img src="@Model.CountriesPopular[i].PhotoUrl" class="d-block w-100 " height="300" style="object-fit:cover;  opacity: .5" alt="..." />

				<div class="carousel-caption d-none d-md-block">
					<h1>@Model.CountriesPopular[i].Name</h1>
