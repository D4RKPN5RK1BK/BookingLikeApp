<h2 class="card-title mt-5">Отели с наибольшим количеством бронирований</h2>
<div class="row">
	@foreach (var a in Model.ApartmentsPopular)
	{
		<div class=" col-6  col-md-3 col-sm-4 mb-3">
			<a class="card h-100 text-white card-link" asp-action="Details" asp-controller="Read" asp-area="Apartment" asp-route-id="@a.Id" style="background-color: #000000">
				<img src="@a.Photos.First().PhotoUrl" height="200" class="card-img text-center" style="object-fit:cover;  opacity: .65" />
				<div class="card-img-overlay">
					<h4 class="card-title ">
						@a.Name
						@for (int i = 0; i < a.Stars; i++)
						{
							<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
								<path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.283.95l-3.523 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
							</svg>
						}
					</h4>
					<h5>
						@if (a.Country != null)
						{
							<b>@a.Country.Name</b>
						}
						@if (a.City != null)
						{
							@a.City.Name
						}
					</h5>
					<p class="my-0">Бронирований: <b>@a.Reservations.Count</b></p>
					<p class="my-0">Ср. оценка: <b>@a.AverageScore</b></p>
				</div>
			</a>
		</div>
	}
</div>

